            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="200"
            android:gravity="left"
            android:text="Column"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="137dp"
        android:layout_height="100dp"
